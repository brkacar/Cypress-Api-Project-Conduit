{
  "name": "conduit-cypress",
  "scripts": {
    "delete:reports": "rm -r cypress/reports/* || npx rimraf cypress/reports/* ||true",
    "prereport": "npm run delete:reports",
    "junit:merge": "npx junit-merge -d cypress/reports/junit -o cypress/reports/junit/results.xml",
    "cy_run_dev": "npx cypress open --env \"username=$USER_NAME,password=$PASSWORD\"",
    "cy_run_qa": "npx cypress open --env \"username=brkacaran1@gmail.com,password=Test@1234\"",
    "cy:run:all": "npm run prereport && npx cypress run || true && npm run junit:merge"
  },
  "devDependencies": {
    "@cypress/grep": "^6.0.0",
    "@faker-js/faker": "^10.3.0",
    "cypress": "^15.9.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-multi-reporters": "^2.0.5",
    "junit-merge": "^2.0.0",
    "mocha-junit-reporter": "^2.2.1"
  }
}
